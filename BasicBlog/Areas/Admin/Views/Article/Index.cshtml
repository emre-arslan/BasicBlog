<@model IEnumerable<BasicBlog.article>
    @{ ViewBag.Title = "Index";
        Layout = "~/Areas/Admin/Views/Shared/_Shared.cshtml";
    }

    <!-- Data Tables -->
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/plugin/datatables/media/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/plugin/datatables/extensions/Responsive/css/responsive.bootstrap.min.css">
    <link href="~/Areas/Admin/Content/assets/plugin/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <div class="row small-spacing">
    <div class="col-xs-12">
    <div class="box-content">
    <h4 class="box-title">Article List</h4>
    <table id="example" class="table table-striped table-bordered display" style="width:100%">
    <thead>
    <tr>
    <th>Title</th>
    <th>Thumbnail</th>
    <th>Content</th>
    <th>Category</th>
    <th>Date</th>
    <th>Status</th>
    <th>İşlem</th>
    </tr>
    </thead>
    <tfoot>
    <tr>
    <th>Title</th>
    <th>Thumbnail</th>
    <th>Content</th>
    <th>Category</th>
    <th>Date</th>
    <th>Status</th>
    <th>İşlem</th>

    </tr>
    </tfoot>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
        <td>@Html.ActionLink(item.title, "Update/" + item.id)</td>
        <td><img src="@item.thumbnail" alt="Alternate Text" /></td>
        <td>@item.contents.Substring(1, 10)</td>
        <td>@item.category.definition</td>
        <td>@item.date.Value.ToShortDateString()</td>
        <td>@item.status</td>
        <td>
        @if (item.status == true)
        {   @Html.ActionLink("Deactivate", "Deactivate", "Article", new { id = item.id }, new { @class = "btn-xs btn-success" })
            @Html.ActionLink("Delete", "Delete", "Article", new { id = item.id }, new { @class = "btn-xs btn-warning" }) }
        else
        {
            @Html.ActionLink("Active", "Active", "Article", new { id = item.id }, new { @class = "btn-xs btn-success" })
            @Html.ActionLink("Delete", "Delete", "Article", new { id = item.id }, new { @class = "btn-xs btn-warning" })
        }
        </td>
        </tr>
    }
    </tbody>
    </table>
    </div>
    <!-- /.box-content -->
    </div>
    </div>
