@model IEnumerable<BasicBlog.projes>
@{
    ViewBag.Title = "Proje List";
    Layout = "~/Areas/Admin/Views/Shared/_Shared.cshtml";
}

<p>
    @Html.ActionLink("Create New", "ProjeAdd", null, new { @class = "btn btn-success" })
</p>

<link rel="stylesheet" href="~/Areas/Admin/Content/assets/plugin/datatables/media/css/dataTables.bootstrap.min.css">
<link rel="stylesheet" href="~/Areas/Admin/Content/assets/plugin/datatables/extensions/Responsive/css/responsive.bootstrap.min.css">
<link href="~/Areas/Admin/Content/assets/plugin/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<div class="row small-spacing">
    <div class="col-xs-12">
        <div class="box-content">
            <h4 class="box-title">Proje List</h4>
            <table id="example" class="table table-striped table-bordered display" style="width:100%">
                <thead>
                    <tr>
                        <th>Proje Name</th>
                        <th>Thumbnail</th>
                        <th>Content</th>
                        <th>Language</th>
                        <th>Proje Link</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Proje Name</th>
                        <th>Thumbnail</th>
                        <th>Content</th>
                        <th>Language</th>
                        <th>Proje Link</th>
                        <th>Operation</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(item.projeName, "ProjeUpdate/" + item.id)</td>
                            <td><img src="@item.thumbnail" alt="Alternate Text" /></td>
                            <td>@item.contents</td>
                            <td>@item.language</td>
                            <td>@item.productLink</td>

                            <td>
                                @Html.ActionLink("Edit", "ProjeUpdate", "Proje", new { id = item.id }, new { @class = "btn-xs btn-success" })
                                @Html.ActionLink("Delete", "ProjeDelete", "Proje", new { id = item.id }, new { @class = "btn-xs btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-content -->
    </div>
</div>



